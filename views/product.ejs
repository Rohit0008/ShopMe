<html>
  <%- include('partials/head'); %>
  <head>

    <style>
      .pic .carousel-inner {
      padding-top: 80px;
      height: 650px;
       }
      .pic .carousel-inner img {
      width: 100%;
      height: 100%;
       }
       .pdts{
         padding-top: 100px;
       }
    </style>
  </head>
<body id="body" style="overflow-x: hidden;">
  
    <!-- Header -->
    <%- include('partials/header'); %>


    <div id="demo" class="pic carousel slide carousel-fade" data-ride="carousel">
      <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
      </ul>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/carousel/Shirt.jpeg" alt="Offers" width="1100" height="400">
          <div class="carousel-caption">
            <h3>Best Offer</h3>
            <p>New Arrivals On Sale</p>
          </div>   
        </div>
        <div class="carousel-item">
          <img src="/carousel/pant.jpg" alt="Deals" width="1000" height="400">
          <div class="carousel-caption">
            <h3>Flash Deals</h3>
            <p>Get your best products</p>
          </div>   
        </div>
        <div class="carousel-item">
          <img src="/carousel/pdts.jpg" alt="lastmin" width="1100" height="500">
          <div class="carousel-caption">
            <h3>Last Minute</h3>
            <p>Grab last minute deals</p>
          </div>   
        </div>
      </div>
      <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </a>
      <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
      </a>
      </div>

    
    <!-- Page Content -->
    <section class="pdts">
    <h1 style="text-align: center; font-size: 35px; padding-bottom: 75px;">Top Brands</h1>
    <div class="pdt-card container">
        <div class="pdt-row row" id="parent">
            <% products.forEach((item)=>{%>
            <div class="pdt-block col-md-3">

                <img class="pdt-img img-fluid mx-auto" src=<%=item.pdt_img%>>

                <form class="middle" method="post" action="/cart">
                  <input class="cart-in" name="brand" value='<%- item.pdt_brand %>'></input>
                  <input class="cart-in" name="type" value='<%- item.pdt_type %>'></input>
                  <input class="cart-in" name="category" value='<%- item.pdt_category %>'></input>
                  <input class="cart-in" name="amount" value='<%- item.pdt_amt %>'></input>
                  <input class="cart-in" name="image" value='<%- item.pdt_img %>'></input>
                  <button class="addcart">Add to cart</button></form>
                <h3 class="name"><%=item.pdt_brand%></h3>
                <p  class="type"><%=item.pdt_type%></p>
                <h5  class="amount">Rs. <%=item.pdt_amt%></h5>
            </div>
            <%});%>
        </div>
    </div>
    </section>
    <%- include('partials/join'); %>
    <%- include('partials/footer'); %>

</body>
</html>

